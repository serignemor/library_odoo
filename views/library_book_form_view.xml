<odoo>
    <record id="library_book_form_view" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Ajout de livre">
                <group>
                    <field name="name"/>
                    <field name="publication_date"/>
                    <field name="publishing_house"/>
                    <field name="image"/>
                    <field name="authors" widget="many2many_tags"/>
                    <field name="isbn"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>
</odoo>